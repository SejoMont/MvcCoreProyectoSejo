@model MvcCoreProyectoSejo.Models.UsuarioDetalles

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-3">Details</h1>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Usuario Detalles</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">ID:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.UsuarioID)</dd>

                <dt class="col-sm-2">Nombre de Usuario:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreUsuario)</dd>

                <dt class="col-sm-2">Foto de Perfil:</dt>
                <dd class="col-sm-10">
                    <img style="width: 20%;" src="@HelperPathProvider.MapUrlPath(Model.FotoPerfil, Folders.Usuarios)" alt="Foto de Perfil" />
                </dd>

                <dt class="col-sm-2">Correo:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-2">Teléfono:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-2">Provincia ID:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ProvinciaID)</dd>

                <dt class="col-sm-2">Nombre de Provincia:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreProvincia)</dd>

                <dt class="col-sm-2">Descripción:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-2">Nombre de Rol:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreRol)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <h4>Eventos:</h4>
        <ul>
            @foreach (var evento in ViewData["Eventos"] as List<EventoDetalles>)
            {
                <li>
                    <a asp-controller="Eventos" asp-action="Details" asp-route-id="@evento.Id">@evento.NombreEvento</a>
                </li>
            }
        </ul>
    </div>
</div>
