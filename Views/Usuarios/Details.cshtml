@model MvcCoreProyectoSejo.Models.UsuarioDetalles
@using MvcCoreProyectoSejo.Helpers
@inject MvcCoreProyectoSejo.Helpers.HelperPathProvider HelperPathProvider

@{
    ViewData["Title"] = "DetalleUsers";
}

<h1>DetalleUsers</h1>

<div>
    <h4>UsuarioDetalles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoPerfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FotoPerfil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProvinciaID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProvinciaID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreRol)
        </dd>
    </dl>
</div>
<img style="width: 550px" class="team-image" src="@HelperPathProvider.MapUrlPath(Model.FotoPerfil, Folders.Usuarios)" />
<div>
    <ul>
        @foreach (var evento in ViewData["Eventos"] as List<EventoDetalles>)
        {
            <li>
                <a asp-controller="Eventos" asp-action="Details" asp-route-id="@evento.Id">@evento.NombreEvento</a>
            </li>
        }
    </ul>
</div>

