@model MvcCoreProyectoSejo.Models.UsuarioDetalles

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="@HelperPathProvider.MapUrlPath(Model.FotoPerfil, Folders.Usuarios)" class="card-img-top" alt="Foto de Perfil">
                <div class="card-body">
                    <h5 class="card-title">@Model.NombreUsuario</h5>
                    <p class="card-text">@Model.Descripcion</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>ID:</strong> @Model.UsuarioID</li>
                    <li class="list-group-item"><strong>Correo:</strong> @Model.Correo</li>
                    <li class="list-group-item"><strong>Teléfono:</strong> @Model.Telefono</li>
                    <li class="list-group-item"><strong>Provincia:</strong> @Model.NombreProvincia</li>
                    <li class="list-group-item"><strong>Rol:</strong> @Model.NombreRol</li>
                </ul>
            </div>
        </div>
        <div class="col-md-8">
            <h1 class="display-4">@Model.NombreUsuario</h1>

            <h4 class="mt-3">Eventos Asociados</h4>
            <div class="list-group">
                <!-- Eventos pasados -->
                <h5 class="mt-3">Eventos Pasados</h5>
                @foreach (var evento in (List<EventoDetalles>)ViewData["EventosPasados"])
                {
                    <a href="@Url.Action("Details", "Eventos", new { id = evento.Id })" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@evento.NombreEvento</h5>
                            <small>@evento.Fecha.ToString("dd/MM/yyyy")</small>
                        </div>
                        <p class="mb-1">@evento.Descripcion</p>
                        <small>Precio: @evento.Precio €</small>
                    </a>
                }

                <!-- Próximos eventos -->
                <h5 class="mt-3">Próximos Eventos</h5>
                @foreach (var evento in (List<EventoDetalles>)ViewData["EventosProximos"])
                {
                    <a href="@Url.Action("Details", "Eventos", new { id = evento.Id })" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@evento.NombreEvento</h5>
                            <small>@evento.Fecha.ToString("dd/MM/yyyy")</small>
                        </div>
                        <p class="mb-1">@evento.Descripcion</p>
                        <small>Precio: @evento.Precio €</small>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
