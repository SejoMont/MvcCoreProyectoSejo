@model MvcCoreProyectoSejo.Models.EventoDetalles

@{
    ViewData["Title"] = "Detalles del Evento";
    var usuario = Context.Session.GetObject<Usuario>("CurrentUser");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <img src="@HelperPathProvider.MapUrlPath(Model.Imagen, Folders.Eventos)" class="card-img-top img-fluid" alt="Imagen del Evento">
                <div class="card-body">
                    <h2 class="card-title">@Model.NombreEvento</h2>
                    <p class="card-text">@Model.Descripcion</p>
                    @if (Model.Fecha < DateTime.Now)
                    {
                        <button disabled class="btn btn-outline-secondary" style="width: 100%">Evento finalizado</button>
                    }
                    else if (usuario == null)
                    {
                        <button disabled class="btn btn-outline-danger btn-block" style="width: 100%">Inicia sesión para comprar entradas</button>
                    }
                    else if (Model.Aforo > Model.EntradasVendidas)
                    {
                        <a asp-action="Comprar" asp-route-idevento="@Model.Id" class="btn btn-outline-success" style="width: 100%">Comprar Entradas</a>
                    }
                    else
                    {
                        <button disabled class="btn btn-outline-danger btn-block" style="width: 100%">AGOTADO</button>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mt-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Detalles del Evento</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>ID:</strong> @Model.Id</li>
                        <li class="list-group-item"><strong>Tipo de Evento:</strong> @Model.TipoEvento</li>
                        <li class="list-group-item"><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</li>
                        <li class="list-group-item"><strong>Ubicación:</strong> @Model.Ubicacion</li>
                        <li class="list-group-item"><strong>Provincia:</strong> @Model.Provincia</li>
                        <li class="list-group-item"><strong>Aforo:</strong> @Model.Aforo</li>
                        <li class="list-group-item"><strong>Precio:</strong> @Model.Precio €</li>
                        <li class="list-group-item"><strong>Recinto:</strong> @Model.Recinto</li>
                        <li class="list-group-item"><strong>Mayor de 18:</strong> @Model.MayorDe18</li>
                        <li class="list-group-item"><strong>Link Maps Provincia:</strong> @Model.LinkMapsProvincia</li>
                    </ul>
                </div>
            </div>
            <div class="mt-3">
                <h5>Artistas Participantes</h5>
                <ul class="list-group">
                    @if (usuario != null && usuario.UsuarioID == Model.RecintoId)
                    {
                        <a asp-controller="ArtistasEvento" asp-action="AddArtistaToEvento" asp-route-idevento="@Model.Id" class="btn btn-outline-secondary">Añadir Artista</a>
                    }
                    @foreach (var artista in (List<ArtistaDetalles>)ViewData["Artistas"])
                    {
                        <a asp-controller="Usuarios" asp-action="Details" asp-route-iduser="@artista.UsuarioID">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="@HelperPathProvider.MapUrlPath(artista.FotoPerfil, Folders.Usuarios)" style="width:25px; height: 25px" class="rounded-circle artist-img" alt="Foto del Artista" />
                                    <span class="ml-2">@artista.NombreUsuario</span>
                                </div>
                                <div>
                                </div>
                            </div>
                        </li>
                        </a>
                    }
                </ul>
            </div>
        </div>
    </div>
    <hr />
    @if (Model.Fecha < DateTime.Now)
    {
        if (usuario != null)
        {
            <form asp-action="AddComentario" method="post">
                <input type="hidden" name="userId" value="@usuario.UsuarioID" />
                <input type="hidden" name="eventoId" value="@Model.Id" />
                <div class="form-group">
                    <label for="texto"><h5>Escribe un Comentario:</h5></label>
                    <div class="form-group">
                        <div class="rating">
                            <input type="radio" id="star1" name="puntuacion" value="1" /><label for="star1" title="1 estrella">&#9733;</label>
                            <input type="radio" id="star2" name="puntuacion" value="2" /><label for="star2" title="2 estrellas">&#9733;</label>
                            <input type="radio" id="star3" name="puntuacion" value="3" /><label for="star3" title="3 estrellas">&#9733;</label>
                            <input type="radio" id="star4" name="puntuacion" value="4" /><label for="star4" title="4 estrellas">&#9733;</label>
                            <input type="radio" id="star5" name="puntuacion" value="5" /><label for="star5" title="5 estrellas">&#9733;</label>
                        </div>
                    </div>
                    <textarea class="form-control" rows="3" id="texto" name="texto"></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Agregar Comentario</button>
            </form>


        }
        <div class="mt-3">
            <h5>Comentarios</h5>
            <div class="list-group">
                @foreach (var comentario in (List<ComentarioDetalles>)ViewData["Comentarios"])
                {
                    <div class="list-group-item">
                        <p>@comentario.Texto</p>
                        <small class="text-muted">Por @comentario.NombreUsuario - @comentario.FechaCreacion</small>
                        <div class="rating">
                            @for (int i = 1; i < 6; i++)
                            {
                                if (i < comentario.Puntuacion)
                                {
                                    <i class="fa-sharp fa-regular fa-star"></i>
                                }
                                else
                                {
                                    <i class="fa-sharp fa-solid fa-star"></i>
                                    
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

</div>
