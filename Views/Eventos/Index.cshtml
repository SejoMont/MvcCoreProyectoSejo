@model IEnumerable<MvcCoreProyectoSejo.Models.EventoDetalles>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4 mb-2">Eventos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<h2 class="mb-3">Tipos de Eventos</h2>
<ul class="list-unstyled">
    @foreach (var tipoEvento in ViewData["TipoEventos"] as List<TipoEvento>)
    {
        <li>
            <a asp-controller="Eventos" asp-action="TipoEvento" asp-route-tipo="@tipoEvento.Nombre" class="text-decoration-none text-dark">@tipoEvento.Nombre</a>
        </li>
    }
</ul>

<div class="row row-cols-1 row-cols-md-4 g-4 mt-4">
    @foreach (var evento in Model)
    {
        <div class="col mb-4">
            <div class="card h-100">
                <img src="@HelperPathProvider.MapUrlPath(evento.Imagen, Folders.Eventos)" class="card-img-top" style="height:300px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@evento.NombreEvento</h5>
                    <p class="card-text">@evento.Descripcion</p>
                    <p class="card-text"><strong>Precio:</strong> @evento.Precio €</p>
                    <a asp-action="Details" asp-controller="Eventos" asp-route-id="@evento.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
